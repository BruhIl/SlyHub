	-- Re-Open Arrow


	minimizedarrow.Name = "minimizedarrow"
	minimizedarrow.Parent = ScreenGui
	minimizedarrow.BackgroundColor3 = Color3.fromRGB(51, 54, 60)
	minimizedarrow.Position = UDim2.new(-0.0146871004, 0, 0.45644173, 0)
	minimizedarrow.Size = UDim2.new(0, 43, 0, 70)
	minimizedarrow.Visible = false
	minimizedarrow.ZIndex = 90

	UICorner_3.Parent = minimizedarrow

	arrow.Name = "arrow"
	arrow.Parent = minimizedarrow
	arrow.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	arrow.BackgroundTransparency = 1.000
	arrow.Position = UDim2.new(-0.0149999997, 0, -0.00114285946, 0)
	arrow.Size = UDim2.new(0, 43, 0, 70)
	arrow.ZIndex = 91
	arrow.Font = Enum.Font.TitilliumWeb
	arrow.Text = "â–¶"
	arrow.TextColor3 = Color3.fromRGB(240, 240, 240)
	arrow.TextScaled = true
	arrow.TextSize = 14.000
	arrow.TextWrapped = true
	arrow.TextXAlignment = Enum.TextXAlignment.Right

	UICorner_4.Parent = arrow


	-- GUI CONTROLLER SCRIPT


	local MainOpen = false
	local LoadingOpen = false
	local ArrowOpen = false


	-- Minimize Main GUI


	minimize.MouseButton1Click:Connect(function()
		-- Tween smaller, then tween position to arrow. Make arrow visible and then Main invisible

		main.Visible = false
		minimizedarrow.Visible = true
	end)


	-- Minimize Main GUI


	arrow.MouseButton1Click:Connect(function()
		-- Make Main visible and arrow invisible. Tween main position to original location, tween it to be wider, then tween it in a dropdown fashion after

		minimizedarrow.Visible = false
		main.Visible = true
	end)


	-- Close / Destroy / Unhook Script


	close.MouseButton1Click:Connect(function()
		-- Tween out then destroy

		close.Parent.Parent.Parent:Destroy() -- Entire GUI
	end)


	-- Auto Loading

	loadingscreen.Transparency = 1
	loadingbarBG.Transparency = 1
	loadingbarprogress.Transparency = 1
	loadinglogo.ImageTransparency = 1
	loadingtitle.TextTransparency = 1
	loadingversion.TextTransparency = 1
	loadingwatermark.TextTransparency = 1

	local StarterGui = game:GetService("StarterGui")

	StarterGui:SetCore("SendNotification", {
		Title = "Injecting...";
		Text = "The script is being injected";
		Duration = 3;
	})

	wait(2)

	-- TweenInfo IN

	local LoadScreenTweenInInfo = TweenInfo.new(

		1, -- Length
		Enum.EasingStyle.Sine,
		Enum.EasingDirection.Out,
		0, -- Repeat Amount
		false, -- Should it repeat?
		0 -- Delay between repeated Tweens

	)

	local BlurTweenInfo = TweenInfo.new(

		2, -- Length
		Enum.EasingStyle.Linear,
		Enum.EasingDirection.Out,
		0, -- Repeat Amount
		false, -- Should it repeat?
		0 -- Delay between repeated Tweens

	)

	local ProgressTweenInfo = TweenInfo.new(

		4, -- Length
		Enum.EasingStyle.Quint,
		Enum.EasingDirection.Out,
		0, -- Repeat Amount
		false, -- Should it repeat?
		0 -- Delay between repeated Tweens

	)

	local LoadScreenTweenInProperties = {

		Transparency = 0

	}

	local LoadScreenSizeTweenInProperties = {

		Position = UDim2.new(0.5 , -210 , 0.5 , -248),
		Size = UDim2.new(0, 420, 0, 497)

	}

	local LoadTextTweenInProperties = {

		TextTransparency = 0

	}

	local LoadImageTweenInProperties = {

		ImageTransparency = 0

	}

	local BlurTweenInProperties = {

		Size = 20

	}

	local ProgressTweenProperties = {

		Size = UDim2.new(0, 239,0, 11)

	}

	-- TweenInfo OUT

	local LoadScreenTransparencyTweenOutProperties = {

		Transparency = 1

	}

	local LoadScreenSizeTweenOutProperties = {

		Position = UDim2.new(0.5, -84,0.5, -65),
		Size = UDim2.new(0,168,0, 130)

	}

	local LoadTextTweenOutProperties = {

		TextTransparency = 1

	}

	local LoadImageTweenOutProperties = {

		ImageTransparency = 1

	}

	local BlurTweenOutProperties = {

		Size = 0

	}

	-- Tween Creation

	local TS = game:GetService("TweenService")
	local Lighting = game:GetService("Lighting")
	local Blur = Instance.new("BlurEffect")
	Blur.Parent = Lighting
	Blur.Size = 0

	local BlurTweenIn = TS:Create(Blur, BlurTweenInfo, BlurTweenInProperties) -- Blur tweens out with loading screen
	local BlurTweenOut = TS:Create(Blur, BlurTweenInfo, BlurTweenOutProperties) -- Blur tweens out with loading screen

	local ProgressTween = TS:Create(loadingbarprogress, ProgressTweenInfo, ProgressTweenProperties)

	local LoadScreenTransparencyTweenIn = TS:Create(loadingscreen, LoadScreenTweenInInfo, LoadScreenTweenInProperties)
	local LoadScreenSizeTweenIn = TS:Create(loadingscreen, LoadScreenTweenInInfo, LoadScreenSizeTweenInProperties)
	local LoadScreenTransparencyTweenOut = TS:Create(loadingscreen, LoadScreenTweenInInfo, LoadScreenTransparencyTweenOutProperties)
	local LoadScreenSizeTweenOut = TS:Create(loadingscreen, LoadScreenTweenInInfo, LoadScreenSizeTweenOutProperties)

	local LoadingBarBGTweenIn = TS:Create(loadingbarBG, LoadScreenTweenInInfo, LoadScreenTweenInProperties)
	local LoadingBarProgressTweenIn = TS:Create(loadingbarprogress, LoadScreenTweenInInfo, LoadScreenTweenInProperties)
	local LoadingBarBGTweenOut = TS:Create(loadingbarBG, LoadScreenTweenInInfo, LoadScreenTransparencyTweenOutProperties)
	local LoadingBarProgressTweenOut = TS:Create(loadingbarprogress, LoadScreenTweenInInfo, LoadScreenTransparencyTweenOutProperties)

	local LoadingLogoTweenIn = TS:Create(loadinglogo, LoadScreenTweenInInfo, LoadImageTweenInProperties)
	local LoadingLogoTweenOut = TS:Create(loadinglogo, LoadScreenTweenInInfo, LoadImageTweenOutProperties)

	local LoadingTitleTweenIn = TS:Create(loadingtitle, LoadScreenTweenInInfo, LoadTextTweenInProperties)
	local LoadingTitleTweenOut = TS:Create(loadingtitle, LoadScreenTweenInInfo, LoadTextTweenOutProperties)

	local LoadingVersionTweenIn = TS:Create(loadingversion, LoadScreenTweenInInfo, LoadTextTweenInProperties)
	local LoadingVersionTweenOut = TS:Create(loadingversion, LoadScreenTweenInInfo, LoadTextTweenOutProperties)

	local LoadingWatermarkTweenIn = TS:Create(loadingwatermark, LoadScreenTweenInInfo, LoadTextTweenInProperties)
	local LoadingWatermarkTweenOut = TS:Create(loadingwatermark, LoadScreenTweenInInfo, LoadTextTweenOutProperties)

	BlurTweenIn:Play()

	wait(1) -- Delay before loading screen begins to appear

	-- Tween in the small background just after the blur, then arrange it to full size. Then Tween in everything else

	LoadScreenTransparencyTweenIn:Play()

	wait(1) -- Delay Before GUI size and position Tween begins

	LoadScreenSizeTweenIn:Play()

	wait(1)

	LoadingBarBGTweenIn:Play()
	LoadingBarProgressTweenIn:Play()
	LoadingLogoTweenIn:Play()
	LoadingTitleTweenIn:Play()
	LoadingVersionTweenIn:Play()

	wait(0.5)

	ProgressTween:Play()

	wait(4.5)

	LoadingBarBGTweenOut:Play()
	LoadingBarProgressTweenOut:Play()

	wait(0.5)

	LoadingWatermarkTweenIn:Play()

	wait(3)

	-- Tween Everything out and then main in

	LoadingLogoTweenOut:Play()
	LoadingTitleTweenOut:Play()
	LoadingVersionTweenOut:Play()
	LoadingWatermarkTweenOut:Play()

	wait(1)

	LoadScreenSizeTweenOut:Play()
	BlurTweenOut:Play()

	wait(1)

	LoadScreenTransparencyTweenOut:Play()

	wait(1)

	local bindable = Instance.new("BindableFunction")

	function bindable.OnInvoke()

		wait(1)

		StarterGui:SetCore("SendNotification", {
			Title = "Credits:";
			Text = "Made by: CrumCusader";
			Button1 = "Ok!";
			Duration = 600;
		})
	end

	StarterGui:SetCore("SendNotification", {
		Title = "Success!";
		Text = "The script has been injected";
		Callback = bindable,
		Button1 = "Thanks";
		Duration = 600;
	})

	loadingscreen.Transparency = 1 -- Tween Out again
	loadingscreen.Visible = false
	main.Visible = true

	Blur:Destroy()
else -- Prevent
	
	local StarterGui = game:GetService("StarterGui")
	
	StarterGui:SetCore("SendNotification", {
		Title = "Notice:";
		Text = "You have already injected this script!";
		Button1 = "Sorry";
		Duration = 600;
	})
	
end
